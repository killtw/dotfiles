# General
alias ..="cd .."
alias java="/Library/Internet\ Plug-Ins/JavaAppletPlugin.plugin/Contents/Home/bin/java"

# Git
alias gs="git status"

# Homebrew
alias bc="brew cask"

# Docker
alias dc="docker-compose"
alias ctop="docker run --rm -ti -v /var/run/docker.sock:/var/run/docker.sock quay.io/vektorlab/ctop:latest"

# PHP
alias art="php artisan"
alias phpunit="php vendor/bin/phpunit"

function tinker() {
    if art | grep -q tinx ; then
        art tinx
    else
        art tinker
    fi
}

function migrate() {
  [ -e "artisan" ] && php artisan migrate
  [ -e "Rakefile" ] && bundle exec rake db:migrate
}

function rollback() {
  [ -e "artisan" ] && php artisan migrate:rollback
  [ -e "Rakefile" ] && bundle exec rake db:rollback
}
